<!--Google map-->
<style>
  #map{
    height: 450px;
    width: 100%;
</style>

<div id="map"></div>
<script>
  function initMap(){
    //map options
    var options = {
      zoom:9,
      center:{lat:39.422437, lng: -85.013052}
    }
    //new map
    var map = new google.maps.Map(document.getElementById('map'), options);
    
    //add marker
    var marker = new google.maps.Marker({
      position:{lat:39.422437, lng:-85.013052},
      map: map //A value set equal to the var map
    });
    
    var infoWindow = new google.maps.InfoWindow({
      content: '<h3>Advanced Print Solutions</h3> </br> <p>Address: 714 Main Street</p> <p>City: Brookville</p> <p>State: Indiana</p> <p>Zip Code: 47012</p> <a href ="/contact">Request a Quote!</a>'
      
    });
    
    marker.addListener('click', function(){
      infoWindow.open(map, marker);
    })
  }
</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA0PJ2aM-lVQ2tbRk_DHwYbPx2ke96lIbg&callback=initMap"
async defer></script>
